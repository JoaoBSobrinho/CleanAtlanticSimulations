<?xml version="1.0" encoding="UTF-8" ?>
<postProcessing>
	<time>
        <step value = "2" />
	</time>
	<EulerianMeasures>
		<measures>
			<field key = "concentrations"/>
			<filters>
				<filter key = "beaching" value= "0" comments = "0-all, 1-only non beached particles, 2-only beached (defaut=0)"/>
			</filters>
		</measures>
		<gridDefinition>
			<units value= "relative" comments="relative, meters, degrees"/>
			<resolution x="100" y="100" z="3"/>
		</gridDefinition>
	</EulerianMeasures>	
    <plot>
        <time value="all" comments='season, month, year'/>
        <measure key="cumsum" comments='any implicit method, mean, std, diff, cumsum'/>
        <type value="imshow" comments='contour,contourf,pcolormesh,imshow'/> 
    </plot>
</postProcessing>
